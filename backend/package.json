{
  "name": "hot-fantasy-backend",
  "version": "1.0.0",
  "description": "Backend API for Hot Fantasy",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && node -e \"import('fs').then(fs => fs.copyFileSync('src/players-data.json', 'dist/players-data.json'))\"",
    "start": "node dist/server.js",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "mongoose": "^8.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  }
}
